journal = {Theoretical Ecology},
keywords = {Biogeography,Co-occurrence,Ecological networks,Indirect interactions,Null models},
number = {1},
pages = {39--48},
title = {{A theory for species co-occurrence in interaction networks}},
volume = {9},
year = {2016}
