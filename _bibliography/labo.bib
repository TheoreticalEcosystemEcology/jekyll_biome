@article{nenzen2018,
  author = {Nenzén, Hedvig K. and Martel, Véronique and Gravel, Dominique},
  title = {Can hyperparasitoids cause large-scale outbreaks of insect herbivores?},
  journal = {Oikos},
  year = {2018},
  volume = {127},
