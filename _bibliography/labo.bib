journal = {Ecology and Evolution},
keywords = {Consumer-resource,Sarracenia purpurea,predator–prey,reciprocal-transplant experiment,temperature},
number = {14},
pages = {4885--4897},
pmid = {27547320},
title = {{Mismatch in microbial food webs: predators but not prey perform better in their local biotic and abiotic conditions}},
volume = {6},
year = {2016}
}
