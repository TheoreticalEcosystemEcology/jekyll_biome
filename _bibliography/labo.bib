isbn = {1054-3139},
issn = {10959289},
journal = {ICES Journal of Marine Science},
keywords = {Gulf of St Lawrence,benthic invertebrate community,multivariate analyses,shrimp,spatial scales,trawling disturbance.},
month = {jul},
number = {8},
pages = {2457--2466},
publisher = {Oxford University Press ({\{}OUP{\}})},
title = {{No more detectable fishing effect on Northern Gulf of St Lawrence benthic invertebrates}},
url = {http://icesjms.oxfordjournals.org/lookup/doi/10.1093/icesjms/fsv124},
