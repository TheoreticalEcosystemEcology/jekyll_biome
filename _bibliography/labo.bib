isbn = {4955139574},
issn = {00129658},
journal = {Ecology},
keywords = {Europe,Salix,decadal census,ecological interaction networks,food webs,galler,inquiline,parasitoid,spatiotemporal community structure,trans-continental survey,trophic interactions},
number = {6},
