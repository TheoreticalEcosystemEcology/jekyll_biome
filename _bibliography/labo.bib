@article{delmas2018,
author = {Delmas, Eva and Besson, Mathilde and Brice, Marie-Hélène and Burkle, Laura A. and Dalla Riva, Giulio V. and Fortin, Marie-José and Gravel, Dominique and Guimarães, Paulo R. and Hembry, David  H. and Newman, Erica A. and Olesen, Jens M. and Pires, Mathias M. and Yeakel, Justin D. and Poisot, Timothée},
title = {Analysing ecological networks of species interactions},
