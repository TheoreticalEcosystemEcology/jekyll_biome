journal = {Glob. Chang. Biol.},
keywords = {Climate change,Connectance,Fish body size,Food-webs,Generality,Mediterranean Sea,Metaweb,Niche model,Vulnerability,climate change,connectance,fish body size,food-webs,generality,mediterranean sea,metaweb,niche model},
