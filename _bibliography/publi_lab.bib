file = {assets/pdf/Poisot et al. - 2014 - Mangal - Making Ecological Network Analysis Simple(2).pdf},
pages = {002634},
title = {mangal - making ecological network analysis simpler},
url = {http://biorxiv.org/lookup/doi/10.1101/002634 http://biorxiv.org/content/early/2014/02/12/002634.abstract},
year = {2014}
}
