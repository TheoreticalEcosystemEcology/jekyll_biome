journal = {Ecology},
keywords = {Acer,Acer: growth {\&} development,Demography,Ecosystem,Environment,Fagus,Fagus: growth {\&} development,Plant Leaves,Plant Leaves: growth {\&} development,Soil,Soil: analysis,Spatial Behavior,Species Specificity,Sunlight,Time Factors},
